<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>bankingAccount</param-name>
        <param-value>TechShop</param-value>
    </context-param>
    <context-param>
        <param-name>nameBank</param-name>
        <param-value>MB Bank</param-value>
    </context-param>
    <context-param>
        <param-name>number</param-name>
        <param-value>0384104668</param-value>
    </context-param>
    <servlet>
        <servlet-name>Homepage</servlet-name>
        <servlet-class>Control.Homepage.Homepage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>Control.Login.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificationEmail</servlet-name>
        <servlet-class>Control.Login.VerificationEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPass</servlet-name>
        <servlet-class>Control.Login.ResetPass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnterNewPass</servlet-name>
        <servlet-class>Control.Login.EnterNewPass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordController</servlet-name>
        <servlet-class>Control.Login.ChangePasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Control.Login.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Control.Login.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetail</servlet-name>
        <servlet-class>Control.Homepage.ProductDetail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Homepage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificationEmail</servlet-name>
        <url-pattern>/verificationRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPass</servlet-name>
        <url-pattern>/ResetPass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnterNewPass</servlet-name>
        <url-pattern>/EnterNewPass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordController</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetail</servlet-name>
        <url-pattern>/productdetail</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            1000000
        </session-timeout>
    </session-config>
</web-app>
